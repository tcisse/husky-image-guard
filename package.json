{
  "name": "husky-image-guard",
  "version": "1.0.7",
  "description": "A Husky hook to check image sizes before a Git push",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "image-guard": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build && npm test",
    "postinstall": "node dist/postinstall.js || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc --watch",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "husky",
    "git-hooks",
    "image",
    "size",
    "optimization",
    "pre-push",
    "pre-commit",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tcisse/husky-image-guard.git"
  },
  "bugs": {
    "url": "https://github.com/tcisse/husky-image-guard/issues"
  },
  "homepage": "https://github.com/tcisse/husky-image-guard#readme",
  "peerDependencies": {
    "husky": ">=8.0.0",
    "sharp": ">=0.33.0"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "sharp": "^0.33.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
